<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card card-body bg-dark text-white p-5" action="/signup" method="POST">
        <h3 class="text-center fw-bold mb-4">Registrese</h3>

        <label for="fullname">Escriba su nombre completo:</label>
        <input type="type" name="fullname" placeholder="John Doe" class="form-control mb-3" autofocus />

        <label for="username">Escriba su correo:</label>
        <input type="email" name="email" placeholder="johndoe123" class="form-control mb-3" />

        <label for="password">Escriba su contraseña:</label>
        <input type="password" name="password1" placeholder="Password" class="form-control mb-3" />

        {{!-- Confirm your password --}}
        <label for="password">Confirme su contraseña:</label>
        <input type="password" name="password2" placeholder="Password" class="form-control mb-3" />

        <button class="btn btn-success btn-block">
          Registrarme
        </button>
    </div>
    </form>

    {{! Link }}
    <p class="fs-5 text-center text-white mt-3">¿Ya tiene una cuenta?
      <a href="/signin" class="text-info">Inicie Sesión</a>
    </p>
  </div>
</div>