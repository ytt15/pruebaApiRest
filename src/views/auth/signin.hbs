<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <form action="/signin" method="POST" class="card card bg-dark text-white p-4">

        <h3 class="text-center my-3">Inicie Sesión</h3>

        <img src="/img/logo.png" alt="Logo Fazt" class="card-img-top mx-auto m-2 rounded-circle w-50" />
        <div class="card-body">

          {{!-- Email --}}
          <label for="username" class="fw-light fs-6 mb-2">Escriba su correo:</label>
          <input type="text" name="email" placeholder="youremail@mail.com" class="form-control mb-3" autofocus />

          <label for="password">Escriba su contraseña:</label>
          <div class="form-group">
            <input type="password" name="password" placeholder="Password" class="form-control mb-3" />
          </div>
          <button class="btn btn-primary btn-block">
            Ingresar
          </button>

        </div>
      </form>

      {{! Link }}
      <p class="fs-5 text-center mt-3 text-light">¿No tiene cuenta?
        <a href="/signup" class="text-info">Registrese</a>
      </p>

    </div>
  </div>
</div>